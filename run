#!/bin/bash

if [ -d "$1" ]; then
  clear
  cd "$1" || exit

  if [ -f "$1" ]; then
    python "$1"
  else
    if [ -f "$1" ]; then
      clear
      source "$1"
      echo "$1 has run"
    fi
  fi

elif [[ "$1" == *.py && -f "$1" ]]; then
  clear
  python "$1"
  echo "$1 has run"

elif [ -f "$1" ]; then
  ls -l "$1"
  clear
  source "$1"
  echo "$1 has run"

else
  echo "No such file or directory: $1"
fi