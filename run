#!/bin/bash

if [ -d "$1" ]; then
  clear
  cd "$1" || exit

  if [ -f "app.py" ]; then
    python app.py
  else
    shfile=[ -f "$1"];
    if 'shfile'; then
      clear
      source "$shfile"
      echo "$shfile has run"
    fi
  fi

elif [[ "$1" == *.py && -f "$1" ]]; then
  clear
  python "$1"
  echo "$1 has run"

elif [ -f "$1" ]; then
  ls -l "$1"
  clear
  source "$1"
  echo "$1 has run"

else
  echo "No such file or directory: $1"
fi