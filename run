#!/bin/bash

if [ -d "$1" ]; then
  clear
  cd "$1" || exit

  if [ -f "app.py" ]; then
    python app.py
  else
    shfile=$(ls *.sh 2>/dev/null | head -n 1)
    if [ -n "$shfile" ]; then
      ls -l "$shfile"
      clear
      source "$shfile"
      echo "$shfile has run"
    fi
  fi

elif [ -f "$1" ]; then
  ls -l "$1"
  clear
  source "$1"
  cd - || exit
  clear
  echo "$1 has run"

else
  echo "$1 bukan direktori atau file yang valid."
fi

elif [ -f "$1" ]; then
  clear
  python "$1"
  clear
 echo "$1 has run" 
elif [ -f "$1" ]; then
  clear
  source "$1"
  clear
  echo "$1 has run" 
else
  echo "No such file or directory: $1"
fi
